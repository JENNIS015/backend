<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 style="color: blue">Centro de Mensajes</h2>
<div id="title"></div>
    <form onsubmit="return enviarMensaje()">
      <div class="form-group">
        <input
          id="id"
          placeholder="email"
          className="form-control"
          type="email"
          name="id"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="nombre"
          placeholder="nombre"
          className="form-control"
          type="text"
          name="nombre"
          required
        />
      </div>
      <div class="form-group">
        <input
          id="apellido"
          placeholder="apellido"
          className="form-control"
          type="text"
          name="apellido"
        />
      </div>

      <div class="form-group">
        <input
          id="edad"
          placeholder="edad"
          className="form-control"
          type="number"
          name="edad"
        />
      </div>

      <div class="form-group">
        <input
          id="alias"
          placeholder="alias"
          className="form-control"
          type="text"
          name="alias"
        />
      </div>

      <div class="form-group">
        <input
          id="avatar"
          placeholder="avatar"
          className="form-control"
          type="text"
          name="avatar"
        />
      </div>

    <div class="form-group">
        <input
          id="textoMensaje"
          placeholder="texto"
          className="form-control"
          type="text"
          name="textoMensaje"
        />
      </div>
 
      <input type="submit" value="Enviar" />


    </form>


      <br />
      <div id="contenedorMensaje"></div>

  </div>
</div>

 