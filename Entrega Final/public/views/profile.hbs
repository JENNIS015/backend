 <section class="user-profile">
  <div class="container">
  <div class="row">
    <div class="col-sm-12"><h1>Perfil de usuario</h1></div>
    <div class="row">
      <div class="col-sm-3">
        <div class="text-center">
          {{#when user.ref 'eq' 'Facebook'}}
 
          <img alt="profile" class="avatar img-circle img-thumbnail" src="{{user.avatar}}">
              {{else}}
                    <img
                  alt="profile"
                  class="avatar img-circle img-thumbnail"
                  src="./uploads/{{user.avatar}}"
                />
           {{/when}}
 

          {{!-- <h6>Upload a different photo...</h6>
          <input type="file" class="text-center center-block file-upload" /> --}}
        </div>
      </div>
      <!--/col-3-->
      <div class="col-sm-9">



        <div class="tab-content">
         {{#if user}}
 
          <form class="form"  id="registrationForm" data-id={{id}}>
            <div class="form-group">
           
              <div class="col-sm-12">
                <label for="first_name"><h4>First name</h4></label>
                <input
                  type="text"
                  class="form-control"
                  name="first_name"
                  id="first_name"
                 value="{{user.name}}"
               />
              </div>
 
              <div class="col-sm-12">
                <label for="last_name"><h4>Last name</h4></label>
                <input
                  type="text"
                  class="form-control"
                  name="last_name"
                  id="last_name"
                  value="{{user.lastName}}"
                />
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <label for="phone"><h4>Age</h4></label>
                <input
                  type="text"
                  class="form-control"
                  name="number"
                  id="age"
                  value=  "{{user.age}}"
                />
              </div>
 
              <div class="col-sm-12">
                <label for="phone"><h4>Phone</h4></label>
                  <input id="phone" type="tel" name="phone" value="{{user.phone}}" />
                 
              </div>
  
              <div class="col-sm-12">
                <label for="email"><h4>Email</h4></label>
                <p>{{user.email}}</p>
                  
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <label for="email"><h4>Address</h4></label>
                <input
                  type="email"
                  class="form-control"
                  id="location"
                  value="{{user.address}}" />
              </div>

         
            <a class="btn btn-primary" onclick="actualizarProfile('{{user._id}}')">
              Actualizar
            </a>

          </form>

          {{/if}}
        </div>

      </div>
    </div>
  </div>
</div>  
</section>

 