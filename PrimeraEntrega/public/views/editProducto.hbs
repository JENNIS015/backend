 <form id="editar" data-id={{producto.id}}>
     <div class="form-group">
      <input
        id="nombreProducto"
        placeholder="Nombre"
        className="form-control"
        type="text"
        name="nombreProducto"
        value="{{producto.nombre}}"
      />
    </div>
    <div class="form-group">
      <textarea
        id="descripcion"
        className="form-control"
        name="descripcion"
