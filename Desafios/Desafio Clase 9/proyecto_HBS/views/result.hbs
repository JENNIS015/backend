
<h2 style="color: blue">Vista de Productos</h2>

{{#if productos.length}}
  
  <div class="table-responsive">
    <table class="table table-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto URL</th>
      </tr>
      <!-- filas -->
      {{#each productos}}
      <tr>
        <td>{{nombre}}</td>
        <td>{{precio}}</td>
        <td>
          <img
            style="display: inline-flex; width: 40px; height: 40px"
            src="{{foto}}"
          />
        </td>
      </tr>
    {{/each}}
    </table>
  </div>
{{else}}

  <h3 class="alert alert-danger">No se encontraron productos</h3>
 
{{/if}}

  <button  class="btn btn-light" type="button"><a href="/">Agregar Productos</a></button>
            