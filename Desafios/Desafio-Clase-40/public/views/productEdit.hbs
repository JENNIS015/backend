<div class="container">
  <h2>Editar Producto</h2>
  <form id="editar" data-id={{id}}>
    <div class="form-group">
      <input id="nombre" placeholder="Nombre" type="text" class="form-control" name="nombre"
        value="{{data.nombre}}" />
    </div>
    <div class="form-group">
      <input type="text" id="descripcion" name="descripcion" placeholder="DescripciÃ³n" class="form-control"
        value="{{data.descripcion}}"></input>
    </div>
    <div class="form-group">
      <input id="foto" class="form-control" type="text" name="foto" class="form-control"
        placeholder="Foto URL" value="{{data.foto}}" />
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <input id="codigo" class="form-control" type="text" name="codigo" placeholder="Codigo" value="{{data.codigo}}" />
      </div>
      <div class="form-group col-md-4">
        <input id="precio" class="form-control" type="number" name="precio" placeholder="Precio"
          value="{{data.precio}}" />
      </div>
      <div class="form-group col-md-4">
        <input id="stock" class="form-control" type="number" name="stock" placeholder="Stock" value="{{data.stock}}" />
      </div>
    </div>
    <a class="btn btn-warning" onclick="deleting('{{data.id}}')">Eliminar</a>
    <a class="btn btn-warning" onclick="actualizar('{{data.id}}')">Actualizar</a>
  </form>
</div>
